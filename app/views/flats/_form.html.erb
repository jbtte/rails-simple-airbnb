<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="flat-form">
        <h1>Add a new Flat</h1>
        <div class="mt-3">
          <%= simple_form_for @flat do |f| %>
          <%= f.input :name, input_html: { class: 'form-control' } %>
          <%= f.input :address, input_html: { class: 'form-control' } %>
          <%= f.input :description, input_html: { class: 'form-control' } %>
          <%= f.input :price_per_night, input_html: { class: 'form-control' } %>
          <%= f.input :number_of_guests, input_html: { class: 'form-control' } %>
          <div class="row">
            <div class="d-flex mt-3 justify-content-start col-4">
              <%= f.submit class: "btn btn-primary" %>
              <%= link_to "Cancel", flats_path, class: "btn btn-danger ml-2"%>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
